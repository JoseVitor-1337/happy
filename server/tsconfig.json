{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "src",
    "outDir": "./dist",
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  }
}
